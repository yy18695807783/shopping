<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--<item android:drawable="@android:color/holo_red_light" android:state_checked="true" />-->
    <!--<item android:drawable="@android:color/white" android:state_checked="false" />-->
    <!--左边变成圆角-->
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="25dp" android:topLeftRadius="25dp"/>
            <stroke android:color="@android:color/holo_red_light" android:width="1dp"/>
            <solid android:color="@android:color/holo_red_light"/>
        </shape>
    </item>

    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="25dp" android:topLeftRadius="25dp"/>
            <stroke android:color="@android:color/white" android:width="1dp"/>
            <solid android:color="@android:color/white"/>
        </shape>
    </item>

</selector>